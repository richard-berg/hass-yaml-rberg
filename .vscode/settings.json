{
  "files.associations": {
    "*.yaml": "yaml",
    "*.yml": "yaml"
  },

  "yaml.schemas": {
    "file:///config/git/hass-yaml-rberg/.vscode/schemas/blueprint-automation.json": [
      "blueprints/automation/**/*.yaml"
    ],
    "file:///config/git/hass-yaml-rberg/.vscode/schemas/blueprint-script.json": [
      "blueprints/script/**/*.yaml"
    ],
    "file:///config/git/hass-yaml-rberg/.vscode/schemas/configuration.json": [
      "configuration.yaml"
    ],

  },

  // Allow all HA YAML custom tags
  "yaml.customTags": [
    "!include scalar",
    "!include_dir_list scalar",
    "!include_dir_merge_list scalar",
    "!include_dir_named scalar",
    "!include_dir_merge_named scalar",
    "!secret scalar",
    "!input scalar",
    "!env_var scalar"
  ],

  // Recommended HA editor defaults
  "yaml.validate": true,
  "yaml.disableAdditionalProperties": true,
  "yaml.format.enable": true,
  "yaml.schemaStore.enable": false,   // <— This disables the container’s internal schema source
  "editor.tabSize": 2,
  "editor.insertSpaces": true
}
